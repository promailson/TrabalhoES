<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sistema de Gestão de Pessoas e Conhecimento</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Sistema de Gestão de Pessoas e Conhecimento", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Colaboradores", "Index", "Colaboradores")</li>
                    <li>@Html.ActionLink("Projetos", "Index", "Projetos")</li>
                    <li>@Html.ActionLink("Atividades", "Index", "Atividades")</li>
                    <li>@Html.ActionLink("Competencias", "Index", "Competencias")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            @if (Session["NomeLogado"] != null)
                            {
                                <text>
                                    @Session["NomeLogado"].ToString()
                                </text>
                            } <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            @if (Session["LoginID"] != null)
                            {
                                @Html.ActionLink("Meus Dados", "Editar", "Colaboradores", new { id = Session["LoginID"] }, new { id = Session["LoginID"] })
                            }
                    </li>
                    <li>@Html.ActionLink("Sair","Sair","Home")</li>
                </ul>
            </li>
        </ul>
    </div>
</div>
</div>
<div class="container body-content">
    @RenderBody()

    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - Sistema de Gestão de Pessoas e Conhecimento</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
<script src="~/Scripts/jquery.cep.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#cep').cep();
        $('#cep').focus();
    });
</script>
</body>
</html>
